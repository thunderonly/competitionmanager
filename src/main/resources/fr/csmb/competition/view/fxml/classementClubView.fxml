<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane fx:controller="fr.csmb.competition.controller.ClassementClubController"
            xmlns:fx="http://javafx.com/fxml/1"  xmlns="http://javafx.com/javafx/8" prefHeight="400.0" prefWidth="600.0" >
    <center>
        <TableView fx:id="tableClassementClub">
            <columns>
                <TableColumn fx:id="identifiantClub" text="Identifiant Club"/>
                <TableColumn fx:id="nomClub" text="Nom Club"/>
                <TableColumn fx:id="totalTechnique" text="Total Technique"/>
                <TableColumn fx:id="totalCombat" text="Total Combat"/>
                <TableColumn fx:id="totalGeneral" text="Total General"/>
                <TableColumn fx:id="classementTechnique" text="Classement Technique"/>
                <TableColumn fx:id="classementCombat" text="Classement Combat"/>
                <TableColumn fx:id="classementGeneral" text="Classement General"/>

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
